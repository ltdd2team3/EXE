<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:padding="50dp"
    tools:context="com.example.myapplication.ThemHangActivity" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sản phẩm" />

            <EditText
                android:id="@+id/txtTenSP_ThemSP"
                android:layout_width="336dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục" />

            <Spinner
                android:id="@+id/spinnerDM"
                android:layout_width="336dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_giasp_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng" />

            <EditText
                android:id="@+id/txtSoluong_ThemSP"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <TextView
                android:id="@+id/tv_tensp_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá cả" />

            <EditText
                android:id="@+id/txtGiaca_ThemSP"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center" >

                <ImageButton
                    android:id="@+id/ibnCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/photo_camera" />

                <ImageButton
                    android:id="@+id/ibnFolder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/folder" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgHinh"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_weight="5.82"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/picture" />

            <Button
                android:id="@+id/btnLuu_ThemSP"
                android:layout_width="100dp"
                android:layout_height="30dp"

                android:background="#5882FA"
                android:text="Lưu"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:width="120dp" />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>